    <ImageView android:id="@+id/imageView_checkBoxSettingsObject_icon" android:layout_width="24dp" android:layout_height="24dp" style="@style/easySettings_imageView_icon"/>
    <TextView android:id="@+id/textView_checkboxSettingsObject_title" android:layout_toStartOf="@+id/checkbox_checkboxSettingsObject" android:layout_toEndOf="@+id/imageView_checkBoxSettingsObject_icon" style="@style/easySettings_textView_title"/>
    <TextView android:id="@+id/textView_checkboxSettingsObject_summary" android:layout_below="@+id/textView_checkboxSettingsObject_title" android:layout_alignStart="@+id/textView_checkboxSettingsObject_title" android:layout_alignEnd="@+id/textView_checkboxSettingsObject_title" style="@style/easySettings_textView_summary"/>
