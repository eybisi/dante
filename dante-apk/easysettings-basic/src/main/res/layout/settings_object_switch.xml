<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:id="@+id/hl_sto_switch_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TextView" android:layout_weight="1"/>
        <TextView android:id="@+id/hl_sto_switch_summary" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="TextView" android:layout_weight="1"/>
    </LinearLayout>
    <Switch android:id="@+id/hl_sto_switch_switch" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>