<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="easySettings_textView_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="easySettings_textView_summary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="easySettings_imageView_icon">
        <item name="android:layout_width">@dimen/settings_icon_width_and_height</item>
        <item name="android:layout_height">@dimen/settings_icon_width_and_height</item>
        <item name="android:layout_marginEnd">@dimen/settings_icon_end_margin</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="easySettings_settingContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/settings_container_padding</item>
    </style>

</resources>
